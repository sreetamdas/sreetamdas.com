{
	"name": "sreetamdas.com",
	"version": "5.0.0",
	"license": "MIT",
	"type": "module",
	"browser": {
		"fs": false
	},
	"scripts": {
		"dev:content": "velite --config './.config/velite.config.ts' --watch",
		"build:content": "velite --config './.config/velite.config.ts' --clean",
		"generate-feeds": "tsx scripts/generate-feeds.ts",
		"dev": "pnpm run dev:content & vite dev",
		"prebuild": "pnpm run build:content && pnpm run generate-feeds",
		"build": "vite build",
		"preview": "vite preview",
		"compile": "tsc --watch",
		"pretypecheck": "pnpm run build:content",
		"typecheck": "tsgo -p tsconfig.json --noEmit",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./src/cloudflare-env.d.ts",
		"db:generate": "drizzle-kit generate",
		"db:bootstrap:local": "wrangler d1 execute sreetamdas_com --local --command \"SELECT 1\"",
		"db:migrate:local": "pnpm db:bootstrap:local && drizzle-kit migrate --config drizzle.studio.local.config.ts",
		"db:migrate:remote": "drizzle-kit migrate --config drizzle.studio.remote.config.ts",
		"db:studio": "drizzle-kit studio --config drizzle.studio.local.config.ts",
		"db:studio:local": "pnpm db:bootstrap:local && drizzle-kit studio --config drizzle.studio.local.config.ts",
		"db:studio:remote": "drizzle-kit studio --config drizzle.studio.remote.config.ts",
		"oxlint:check": "oxlint --config ./.config/.oxlintrc.json ./src",
		"oxlint:fix": "oxlint --config ./.config/.oxlintrc.json --fix ./src",
		"oxfmt:check": "oxfmt --config ./.config/.oxfmtrc.json --ignore-path ./.config/.oxfmtignore --check ./src '!**/routeTree.gen.ts'",
		"oxfmt:write": "oxfmt --config ./.config/.oxfmtrc.json --ignore-path ./.config/.oxfmtignore --write ./src '!**/routeTree.gen.ts'",
		"lint": "pnpm run oxfmt:check && pnpm run oxlint:check",
		"lint:fix": "pnpm run oxfmt:write && pnpm run oxlint:fix",
		"format": "pnpm run oxfmt:write",
		"deploy": "pnpm run build && wrangler deploy -e production",
		"deploy:production": "pnpm run build && wrangler deploy -e production",
		"deploy:staging": "pnpm run build && wrangler deploy -e staging",
		"prepare": "husky",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@cloudflare/vite-plugin": "^1.25.0",
		"@fontsource-variable/bricolage-grotesque": "^5.2.10",
		"@fontsource-variable/inter": "^5.2.8",
		"@notionhq/client": "^5.4.0",
		"@radix-ui/react-alert-dialog": "^1.1.15",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-visually-hidden": "^1.2.4",
		"@sentry/cloudflare": "^10.38.0",
		"@sentry/tanstackstart-react": "^10.38.0",
		"@shikijs/colorized-brackets": "^3.19.0",
		"@shikijs/langs-precompiled": "^3.19.0",
		"@sreetamdas/karma": "^3.1.1",
		"@tailwindcss/vite": "^4.1.17",
		"@tanstack/react-query": "^5.90.21",
		"@tanstack/react-query-devtools": "^5.91.1",
		"@tanstack/react-router": "^1.159.10",
		"@tanstack/react-start": "^1.159.11",
		"clsx": "^2.1.1",
		"drizzle-orm": "1.0.0-beta.15-859cf75",
		"image-size": "^2.0.2",
		"lodash-es": "^4.17.21",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"react-icons": "^5.5.0",
		"rehype-raw": "^7.0.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-toc": "^9.0.0",
		"safe-mdx": "^1.3.9",
		"shiki": "^3.19.0",
		"shiki-magic-move": "^1.2.1",
		"tailwind-merge": "^3.4.0",
		"unist-util-visit": "^5.0.0",
		"vite": "^7.2.7",
		"zod": "^4.1.13",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@octokit/types": "^16.0.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/lodash-es": "^4.17.12",
		"@types/mdx": "^2.0.13",
		"@types/node": "^25.2.3",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@types/unist": "~3.0.3",
		"@typescript/native-preview": "7.0.0-dev.20260214.1",
		"@vitejs/plugin-react": "^5.1.4",
		"better-sqlite3": "^12.6.2",
		"drizzle-kit": "1.0.0-beta.15-859cf75",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"oxfmt": "^0.32.0",
		"oxlint": "^1.47.0",
		"oxlint-tsgolint": "^0.12.2",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"velite": "^0.3.1",
		"vite-tsconfig-paths": "^6.1.1",
		"wrangler": "^4.65.0"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"oxfmt -c ./.config/.oxfmtrc.json --ignore-path ./.config/.oxfmtignore",
			"oxlint --config ./.config/.oxlintrc.json"
		],
		"*.{json,jsonc}": [
			"oxfmt -c ./.config/.oxfmtrc.json --ignore-path ./.config/.oxfmtignore"
		]
	},
	"engines": {
		"node": "24"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"@tailwindcss/oxide",
			"better-sqlite3",
			"esbuild",
			"sharp",
			"workerd"
		]
	},
	"msw": {
		"workerDirectory": "public"
	}
}
